<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.laba.dao.IUserDAO">
    <resultMap type="User" id="UserResultMap" autoMapping="false">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="createTime" column="create_time"/>
        <result property="accountType" column="account_type" javaType="com.solvd.laba.enums.AccountType" typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
        <result property="birth" column="birth"/>
        <result property="age" column="age"/>
    </resultMap>
    <insert id="saveEntity" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
        INSERT INTO users (username, email, password, account_type, birth, age)
        VALUES (#{username}, #{email}, #{password}, #{accountType.type}, #{birth}, #{age});
        ]]>
    </insert>
    <update id="updateEntity" parameterType = "User">
        <![CDATA[
        UPDATE users SET
        username = #{username},
        email = #{email},
        password = #{password},
        create_time = #{createTime},
        account_type = #{accountType.type},
        birth = #{birth}
        WHERE id = #{id};
        ]]>
    </update>
    <delete id = "removeEntity" parameterType = "int">
        <![CDATA[
        DELETE from users WHERE id = #{id};
        ]]>
    </delete>
    <select id = "getEntityById" parameterType = "int" resultMap = "UserResultMap">
        <![CDATA[
        SELECT id, username, email, password, create_time, UPPER(account_type), birth, age FROM users WHERE id = #{id};
        ]]>
    </select>
    <select id = "getUserByEmail" parameterType = "String" resultMap = "UserResultMap">
        <![CDATA[
        SELECT id, username, email, password, create_time, UPPER(account_type), birth, age FROM users WHERE email = #{email};
        ]]>
    </select>
</mapper>